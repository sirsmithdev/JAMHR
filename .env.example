# ============================================
# JAMHR ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and configure for your environment
# Generate APP_KEY with: php artisan key:generate

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="JamHR"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=America/Jamaica

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12
APP_PREVIOUS_KEYS=

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_DEPRECATIONS_TRACE=false
LOG_LEVEL=debug
LOG_DAILY_DAYS=14

# Papertrail (optional)
LOG_PAPERTRAIL_HANDLER=
PAPERTRAIL_URL=
PAPERTRAIL_PORT=

# Slack (optional)
LOG_SLACK_WEBHOOK_URL=
LOG_SLACK_USERNAME=JamHR
LOG_SLACK_EMOJI=:boom:

# Syslog
LOG_SYSLOG_FACILITY=LOG_USER
LOG_STDERR_FORMATTER=

# ============================================
# DATABASE - LOCAL (SQLite)
# ============================================
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
DB_FOREIGN_KEYS=true

# ============================================
# DATABASE - MYSQL (Alternative)
# ============================================
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=jamhr
# DB_USERNAME=root
# DB_PASSWORD=
# DB_CHARSET=utf8mb4
# DB_COLLATION=utf8mb4_unicode_ci
# DB_SOCKET=
# MYSQL_ATTR_SSL_CA=

# ============================================
# DATABASE - POSTGRESQL (Production/DigitalOcean)
# ============================================
# DB_CONNECTION=pgsql
# DB_HOST=your-db-host.db.ondigitalocean.com
# DB_PORT=25060
# DB_DATABASE=defaultdb
# DB_USERNAME=doadmin
# DB_PASSWORD=your-secure-password
# DB_SSLMODE=require

# Connection URL (DigitalOcean App Platform auto-injects this)
# DB_URL=postgres://user:password@host:port/database?sslmode=require

# ============================================
# DATABASE - SQL SERVER (Alternative)
# ============================================
# DB_CONNECTION=sqlsrv
# DB_HOST=127.0.0.1
# DB_PORT=1433
# DB_DATABASE=jamhr
# DB_USERNAME=sa
# DB_PASSWORD=
# DB_ENCRYPT=yes
# DB_TRUST_SERVER_CERTIFICATE=false

# ============================================
# CACHE
# ============================================
CACHE_STORE=database
CACHE_PREFIX=jamhr_cache

# Database cache settings
DB_CACHE_TABLE=cache
DB_CACHE_CONNECTION=
DB_CACHE_LOCK_CONNECTION=
DB_CACHE_LOCK_TABLE=cache_locks

# DynamoDB cache (AWS)
DYNAMODB_CACHE_TABLE=cache
DYNAMODB_ENDPOINT=

# ============================================
# SESSION
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false
SESSION_EXPIRE_ON_CLOSE=false
SESSION_CONNECTION=
SESSION_STORE=
SESSION_TABLE=sessions

# ============================================
# QUEUE
# ============================================
QUEUE_CONNECTION=database
QUEUE_FAILED_DRIVER=database-uuids

# Database queue
DB_QUEUE=default
DB_QUEUE_TABLE=jobs
DB_QUEUE_CONNECTION=
DB_QUEUE_RETRY_AFTER=90

# Redis queue
REDIS_QUEUE=default
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE_RETRY_AFTER=90

# Beanstalkd queue
BEANSTALKD_QUEUE=default
BEANSTALKD_QUEUE_HOST=127.0.0.1
BEANSTALKD_QUEUE_RETRY_AFTER=90

# SQS queue (AWS)
SQS_PREFIX=https://sqs.us-east-1.amazonaws.com/your-account-id
SQS_QUEUE=default
SQS_SUFFIX=

# ============================================
# REDIS
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_PREFIX=jamhr_database_

# Redis URL (DigitalOcean/Heroku style)
# REDIS_URL=redis://user:password@host:port

# Redis Cluster
REDIS_CLUSTER=redis
REDIS_USERNAME=

# Redis connection settings
REDIS_PERSISTENT=false
REDIS_MAX_RETRIES=3
REDIS_BACKOFF_ALGORITHM=default
REDIS_BACKOFF_BASE=0
REDIS_BACKOFF_CAP=0

# Redis cache connection
REDIS_CACHE_CONNECTION=cache
REDIS_CACHE_DB=1
REDIS_CACHE_LOCK_CONNECTION=default

# ============================================
# BROADCASTING
# ============================================
BROADCAST_CONNECTION=log

# ============================================
# FILESYSTEM
# ============================================
FILESYSTEM_DISK=local

# ============================================
# AWS S3 / DigitalOcean Spaces
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# DigitalOcean Spaces (uses S3 compatible API)
# AWS_ACCESS_KEY_ID=your-spaces-key
# AWS_SECRET_ACCESS_KEY=your-spaces-secret
# AWS_DEFAULT_REGION=nyc3
# AWS_BUCKET=jamhr-files
# AWS_ENDPOINT=https://nyc3.digitaloceanspaces.com
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# MAIL - LOCAL DEVELOPMENT
# ============================================
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@jamhr.local"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# MAIL - RESEND (Recommended for Production)
# ============================================
# Resend is a modern email API built for developers.
# Get your API key at: https://resend.com/api-keys
#
# MAIL_MAILER=resend
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="JamHR"
#
# Important: Your "from" address domain must be verified in Resend.
# Add your domain at: https://resend.com/domains

# ============================================
# MAIL - SMTP (Alternative)
# ============================================
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=postmaster@mg.yourdomain.com
# MAIL_PASSWORD=your-mailgun-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="JamHR"

# ============================================
# MAIL - POSTMARK (Alternative)
# ============================================
# MAIL_MAILER=postmark
# POSTMARK_API_KEY=your-postmark-api-key
# POSTMARK_MESSAGE_STREAM_ID=

# ============================================
# MAIL - Additional Settings
# ============================================
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_EHLO_DOMAIN=null
MAIL_URL=
MAIL_LOG_CHANNEL=
MAIL_SENDMAIL_PATH=/usr/sbin/sendmail -bs -i

# ============================================
# MAIL - SLACK NOTIFICATIONS
# ============================================
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=

# ============================================
# MEMCACHED (Alternative to Redis)
# ============================================
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211
MEMCACHED_USERNAME=
MEMCACHED_PASSWORD=
MEMCACHED_PERSISTENT_ID=

# ============================================
# AUTHENTICATION
# ============================================
AUTH_GUARD=web
AUTH_PASSWORD_BROKER=users
AUTH_PASSWORD_RESET_TOKEN_TABLE=password_reset_tokens
AUTH_PASSWORD_TIMEOUT=10800
AUTH_MODEL=App\Models\User

# ============================================
# VITE (Frontend Build)
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# DIGITALOCEAN APP PLATFORM - PRODUCTION
# ============================================
# These are automatically injected by DigitalOcean App Platform
# when you attach a managed database or Redis cluster.
#
# DATABASE_URL=${db.DATABASE_URL}
# REDIS_URL=${redis.REDIS_URL}
#
# Required environment variables to set in App Platform dashboard:
#
# APP_KEY          = base64:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# APP_ENV          = production
# APP_DEBUG        = false
# APP_URL          = https://your-app.ondigitalocean.app
#
# LOG_CHANNEL      = stderr
# LOG_LEVEL        = error
#
# DB_CONNECTION    = pgsql
# SESSION_DRIVER   = redis (or database)
# CACHE_STORE      = redis (or database)
# QUEUE_CONNECTION = redis (or database)
#
# MAIL_MAILER      = resend
# RESEND_API_KEY   = re_xxxxxxxxxxxxxxxxxxxxxxxxx
# MAIL_FROM_ADDRESS= noreply@yourdomain.com (must be verified in Resend)

# ============================================
# PRODUCTION CHECKLIST
# ============================================
# Before deploying to production, ensure:
#
# [ ] APP_ENV=production
# [ ] APP_DEBUG=false
# [ ] APP_KEY is set (generate with: php artisan key:generate --show)
# [ ] APP_URL is set to your production URL (with https://)
# [ ] Database is configured (PostgreSQL recommended)
# [ ] Session/Cache/Queue drivers are set (Redis recommended)
# [ ] Mail is configured for transactional emails
# [ ] LOG_CHANNEL=stderr for container deployments
# [ ] BCRYPT_ROUNDS=12 (or higher for security)
# [ ] SESSION_SECURE_COOKIE=true (for HTTPS)
# [ ] SESSION_SAME_SITE=lax or strict
